<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/fieldImg"
        android:layout_width="1624dp"
        android:layout_height="533dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-9dp" />

    <ImageView
        android:id="@+id/goalieImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="@+id/fieldImg"
        app:layout_constraintEnd_toEndOf="@+id/fieldImg"
        app:layout_constraintStart_toStartOf="@+id/fieldImg"
        app:layout_constraintTop_toTopOf="@+id/fieldImg"
        app:layout_constraintVertical_bias="0.293" />

    <ImageView
        android:id="@+id/soccerBall"
        android:layout_width="25dp"
        android:layout_height="57dp"
        tools:layout_editor_absoluteX="313dp"
        tools:layout_editor_absoluteY="671dp" />


</androidx.constraintlayout.widget.ConstraintLayout>